<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.agupt23.musicapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DownloadSongsActivity"
            android:label="Download Songs"/>
        <activity android:name=".CreatePlayListActivity"
            android:label="Create Playlist"/>
        <activity android:name=".PlaySongsActivity"
            android:label="Play Songs"></activity>
        <uses-permission android:name="android.permission.WAKE_LOCK" />
    </application>

</manifest>